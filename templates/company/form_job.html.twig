{% extends 'layout.html.twig' %}

{% block content %}

    <main class="app-content">
        <div class="tile">
            {{ include('messages/message_flash.html.twig') }}
            <div class="form-horizontal">
                {{ form_start(form) }}
                <section>
                    <h3>Create/Edit project</h3>
                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                {{ form_label(form.name, form.name, {'label_attr': {'class': 'control-label col-md-3'}})
                                }}
                                <div class="col-md-8">
                                    {{form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Example: Web developer'}})}}
                                    <div class="form-control-feedback text-danger">
                                        {{form_errors(form.name)}}
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </section>
                <hr />
                <div class="row">
                    <div class="offset-md-6 col-md-6">
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Save</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>


{% endblock %}