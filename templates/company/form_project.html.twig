{% extends 'layout.html.twig' %}

{% block content %}

    <main class="app-content">
        <div class="tile">

            {{ include('messages/message_flash.html.twig') }}

            <div class="form-horizontal">
                {{ form_start(form) }}
                <section>
                    <h3>Project informations</h3>

                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                {{ form_label(form.name, form.name, {'label_attr': {'class': 'control-label col-md-3'}})
                                }}
                                <div class="col-md-9">
                                    {{form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du projet'}})}}
                                    <div class="form-control-feedback text-danger">
                                        {{form_errors(form.name)}}
                                    </div>

                                </div>
                            </div>
                            <div class="form-group row">

                                {{ form_label(form.description, form.description, {'label_attr': {'class': 'control-label col-md-3'}}) }}
                                <div class="col-md-8">
                                    {{form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': form.description.vars.label}})}}
                                    <div class="form-control-feedback text-danger">
                                        {{form_errors(form.description)}}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.sellingPrice, form.sellingPrice, {'label_attr': {'class': 'control-label col-md-3'}}) }}
                                <div class="col-md-8">

                                    {{form_widget(form.sellingPrice, {'attr': {'class': 'form-control', 'placeholder': "example: 12 000"}})}}
                                    <div class="form-control-feedback text-danger">
                                        {{form_errors(form.sellingPrice)}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <hr />
                <section>
                    <h3>Production</h3>
                    <div class="row mt-4">


                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">

                                {{ form_label(form.created_at, "Creation date",{'label_attr': {'class': 'control-label col-md-3'}}
                                )
                                }}
                                <div class="col-md-9">
                                    {{form_widget(form.created_at, {'attr': {'class': 'form-control', 'placeholder': "dd//MM//yyyyy", }})}}
                                    <div class="form-control-feedback text-danger">
                                        {{form_errors(form.created_at)}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <hr />
                <div class="row">
                    <div class="offset-md-6 col-md-6">
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Save</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>


{% endblock %}