{% extends 'layout.html.twig' %}

{% block content %}

    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-dashboard"></i>&nbspJobs list</h1>
            </div>
        </div>
        <div class="tile pb-5">
            <a href={{path('company_form_job')}} class="btn btn-primary btn-sm"><i
                    class="fa fa-plus-circle mr-2"></i>Add a new job
           </a>

            <hr />
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Job name</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for job in jobs %}
                    <tr>
                        <td>{{job.name}}</td>
                        <td>
                            <a href={{path('edit_job', {'id': job.id})}} class="btn btn-info btn-sm">
                                <i class="fa fa-pencil mr-0"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr />
            <nav class="float-right">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <span class="page-link">&laquo;</span>
                    </li>
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">1<span class="sr-only">(current)</span></span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </nav>
        </div>
    </main>

{% endblock %}
