{% extends 'layout.html.twig' %}
{% set array = [] %}
    {% for del in deleteJob %}
        {%  if del.id not in array %}
        {%  set array = array|merge([del.id]) %}
        {% endif %}
    {% endfor %}
{% block content %}
    <main class="app-content">
        <div class="app-title">
            {{ include('messages/message_flash.html.twig') }}
            <div>
                <h1><i class="fa fa-dashboard"></i>&nbspJobs list</h1>
            </div>
        </div>
        <div class="tile pb-5">
            <a href={{path('company_form_job')}} type="" class="btn btn-primary btn-sm"><i
                    class="fa fa-plus-circle mr-2"></i>Add a new job
           </a>

            <hr />
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Job name</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for job in jobs %}
                    <tr>
                        <td>{{job.name}}</td>
                        <td>
                            <a href={{path('edit_job', {'id': job.id})}} type="" class="btn btn-info btn-sm">
                                <i class="fa fa-pencil mr-0"></i>
                            </a>
                        {% if job.id not in array %}

                                <a href={{path('delete_job', {'id': job.id})}} type="" class="btn btn-danger" name="delete">
                                        <i class="fa fa-trash mr-0"></i>
                                    </a>
                        </td>
                        {% else %}

                        {% endif %}

                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr />
            <nav class="float-right">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <span class="page-link">&laquo;</span>
                    </li>
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">1<span class="sr-only">(current)</span></span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </nav>
        </div>
    </main>

{% endblock %}
