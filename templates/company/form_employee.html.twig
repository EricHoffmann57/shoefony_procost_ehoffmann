{% extends 'layout.html.twig' %}

{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Edition d'un employé</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Employés</a>
                </li>
                <li class="breadcrumb-item">Edition d'un employé</li>
            </ul>
        </div>
        <div class="tile">
            <div class="alert alert-dismissible alert-success my-4">
                <button class="close" type="button" data-dismiss="alert">×</button><strong>Well done!</strong> Message flash.
            </div>
            {{ form_start(form) }}
            <form class="form-horizontal">
                <section>
                    <h3>Informations générales</h3>
                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                {{ form_errors(form.firstName) }}
                                {{ form_label(form.firstName) }}
                                {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': form.firstName.vars.label} }) }}
                            </div>
                            <div class="form-group row">
                                {{ form_errors(form.lastName) }}
                                {{ form_label(form.lastName) }}
                                {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': form.lastName.vars.label} }) }}
                            </div>
                            </div>
                            <div class="form-group row">
                                {{ form_errors(form.email) }}
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': form.email.vars.label} }) }}
                            </div>
                        </div>
                    </div>
                </section>
                <hr/>
                <section>
                    <h3>Production</h3>
                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                <label for="select-job" class="control-label col-md-3">Métier</label>
                                <div class="col-md-9">
                                    {{ form_start(form) }}
                                    <select class="form-control" id="select-job">
                                        <option>Développeur web</option>
                                        <option>Développeur full stack</option>
                                        <option>Ux Designer</option>
                                        <option>Lead programer</option>
                                        <option>Cybersecurity expert</option>
                                        <option>Infographiste</option>
                                        <option>Analyste programmeur</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                {{ form_errors(form.email) }}
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': form.dailyCost.vars.label} }) }}
                            </div>
                            <div class="form-group row">
                                {{ form_errors(form.email) }}
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': form.date.vars.label} }) }}
                            </div>
                        </div>
                    </div>
                </section>
                <hr/>
                <div class="row">
                    <div class="offset-md-6 col-md-6">
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                    </div>
                </div>
            </form>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}